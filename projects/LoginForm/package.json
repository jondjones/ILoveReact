{
    "private": true,
    "name": "myaccount",
    "version": "1.0.0",
    "description": "MrPorter My Account Application",
    "main": "build/server/index.js",
    "scripts": {
        "start": "node ${npm_package_main}",
        "clean": "rm -rf build && rm -f src/server/config/build.json",
        "prebuild": "npm run clean",
        "build": "npm run build:server && npm run build:assets",
        "build:server": "NODE_ENV=production babel src --out-dir build --copy-files --ignore __tests__",
        "build:assets": "webpack --config webpack.config.babel.js",
        "build:assets:size": "npm run --silent build:assets -- --json | webpack-bundle-size-analyzer",
        "prettier": "npm run prettier:js && npm run prettier:css && npm run prettier:json",
        "prettier:js": "prettier --write --print-width=999 --tab-width=4 --single-quote {,**/}*.js",
        "prettier:css": "prettier --write --print-width=999 --tab-width=4 --parser postcss {,**/}*.css",
        "prettier:json": "prettier --write --print-width=999 --tab-width=4 --parser json {,**/}*.json",
        "prewatch": "npm run clean && npm run build:server",
        "watch": "NODE_ENV=development parallelshell 'npm run watch:nodemon' 'npm run watch:server' 'npm run watch:assets'",
        "watch:nodemon": "nodemon ${npm_package_main}",
        "watch:server": "npm run build:server -- --watch",
        "watch:assets": "npm run build:assets -- --watch",
        "test": "jest --coverage",
        "precommit": "lint-staged",
        "package:assets": "mkdir -p target/ && cd ./build/assets && zip -q -r ../../target/${npm_package_name}-assets-${GIT_HASH:0}.zip .",
        "package:server": "mkdir -p target/ && zip -q -r ./target/${npm_package_name}-${GIT_HASH:0}.zip . -x ./build/assets .npmrc",
        "package": "npm run package:server && npm run package:assets"
    },
    "dependencies": {
        "@mrporter/frontend-monitoring": "^5.0.1",
        "@mrporter/inseason-analytics": "^1.0.5",
        "@ynap/address-book": "^1.1.1",
        "@ynap/address-state": "^1.1.0",
        "@ynap/auth-state": "^1.1.0",
        "@ynap/bem-helper": "^3.0.1",
        "@ynap/captcha-state": "^1.1.1",
        "@ynap/express-cache-control": "^1.0.0",
        "@ynap/express-error-handler": "^1.1.0",
        "@ynap/express-locale-parser": "^1.0.1",
        "@ynap/express-logging-middleware": "^1.0.0",
        "@ynap/logging-utils": "^2.2.0",
        "@ynap/login-and-registration-form": "^1.1.1",
        "@ynap/myaccount-customer-state": "^8.0.0",
        "@ynap/myaccount-landing": "^1.1.1",
        "@ynap/myaccount-mocks": "^7.0.0",
        "@ynap/myaccount-nav": "^1.1.1",
        "@ynap/myaccount-summary-state": "^8.0.0",
        "@ynap/overlay": "^1.1.1",
        "@ynap/reducer-utils": "^1.0.3",
        "@ynap/spinner": "^1.1.1",
        "@ynap/wcs-mocks": "^1.1.0",
        "cookie-parser": "^1.4.3",
        "etc": "^1.1.0",
        "etc-yaml": "0.0.5",
        "express": "^4.14.1",
        "express-remote-handlebars": "^4.0.0",
        "history": "^4.6.3",
        "isomorphic-fetch": "^2.2.1",
        "messageformat": "^1.0.2",
        "pino": "^4.2.4",
        "react": "^15.6.1",
        "react-dom": "^15.6.1",
        "react-prop-types": "^0.4.0",
        "react-redux": "^5.0.6",
        "react-router-dom": "^4.1.1",
        "react-router-redux": "^5.0.0-alpha.6",
        "redux": "^3.7.2",
        "redux-form": "^7.1.1",
        "redux-thunk-inject": "0.0.1",
        "request": "^2.79.0"
    },
    "devDependencies": {
        "@ynap/babel-plugin-bem": "^1.0.1",
        "@ynap/hive-vars": "^1.1.1",
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.0",
        "babel-loader": "^7.1.2",
        "babel-preset-env": "^1.6.0",
        "babel-preset-react": "^6.24.1",
        "babel-preset-stage-0": "^6.24.1",
        "css-loader": "^0.28.5",
        "cz-conventional-changelog": "^2.0.0",
        "cz-conventional-changelog-emoji": "^0.1.0",
        "enzyme": "^2.9.1",
        "enzyme-to-json": "^1.5.1",
        "extract-text-webpack-plugin": "^3.0.0",
        "file-loader": "^0.11.2",
        "husky": "^0.14.3",
        "jest": "^21.2.1",
        "json-loader": "^0.5.7",
        "lint-staged": "^4.0.4",
        "messageformat-loader": "^0.6.0",
        "nock": "^9.0.6",
        "nodemon": "^1.11.0",
        "null-loader": "^0.1.1",
        "parallelshell": "^3.0.1",
        "postcss-cssnext": "^3.0.2",
        "postcss-import": "^10.0.0",
        "postcss-loader": "^2.0.6",
        "postcss-url": "^7.1.2",
        "prettier": "^1.5.3",
        "react-addons-test-utils": "^15.4.2",
        "redux-devtools-extension": "^2.13.2",
        "redux-mock-store": "^1.2.2",
        "style-loader": "^0.18.2",
        "svg-url-loader": "^2.1.1",
        "uglifyjs-webpack-plugin": "^1.0.0-beta.2",
        "url-loader": "^0.5.9",
        "webpack": "^3.5.5",
        "webpack-bundle-size-analyzer": "^2.7.0"
    },
    "postcss": {
        "plugins": {
            "postcss-import": {},
            "postcss-cssnext": {},
            "postcss-url": {}
        }
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog-emoji"
        }
    },
    "lint-staged": {
        "*.js": ["npm run prettier:js", "git add"],
        "*.css": ["npm run prettier:css", "git add"],
        "*.json": ["npm run prettier:json", "git add"]
    }
}
